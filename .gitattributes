# Set the default behavior, in case people don't have core.autocrlf set.
* text=auto

# Explicitly declare text files you want to always be normalized to LF.
*.c     text eol=lf
*.h     text eol=lf
*.cpp   text eol=lf
*.hpp   text eol=lf
*.cs    text eol=lf
*.css   text eol=lf
*.html  text eol=lf
*.java  text eol=lf
*.js    text eol=lf
*.json  text eol=lf
*.jsx   text eol=lf
*.less  text eol=lf
*.md    text eol=lf
*.php   text eol=lf
*.py    text eol=lf
*.rb    text eol=lf
*.sass  text eol=lf
*.scss  text eol=lf
*.sh    text eol=lf
*.sql   text eol=lf
*.ts    text eol=lf
*.tsx   text eol=lf
*.txt   text eol=lf
*.vue   text eol=lf
*.xml   text eol=lf
*.yaml  text eol=lf
*.yml   text eol=lf

# Denote all files that are truly binary and should not be modified.
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.mov binary
*.mp4 binary
*.mp3 binary
*.flv binary
*.fla binary
*.swf binary
*.gz binary
*.zip binary
*.7z binary
*.ttf binary
*.eot binary
*.woff binary
*.woff2 binary
*.pyc binary
*.pdf binary